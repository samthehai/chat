interface Node {
  id: ID!
}

type PageInfo {
  startCursor: ID!
  endCursor: ID!
  hasPreviousPage: Boolean!
  hasNextPage: Boolean!
}

type UserFriendsConnection {
  pageInfo: PageInfo!
  edges: [UserFriendsEdge!]!
  totalCount: Int!
}

type UserFriendsEdge {
  cursor: ID!
  node: User
}

type ConversationMessagesConnection {
  pageInfo: PageInfo!
  edges: [ConversationMessagesEdge!]!
  totalCount: Int!
}

type ConversationMessagesEdge {
  cursor: ID!
  node: Message!
}

