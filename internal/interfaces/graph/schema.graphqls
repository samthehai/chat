scalar Uint64
scalar Time

type User {
  id: ID!
  name: String!
  firebaseId: String!
  provider: String!
}

type Message {
  id: ID!
  user: User!
  createdAt: Time!
  text: String!
}

type Mutation {
  postMessage(text: String!): Message
  LoginWithFacebook: User
}

type Query {
  messages: [Message!]!
  users: [User!]!
}

type Subscription {
  messagePosted: Message!
  userJoined: User!
}
